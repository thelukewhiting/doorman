<div class="row">
  <div class="col-md-3">
    <div class="btn-group-vertical" data-toggle="buttons">
      <li class="list-group-item text-center"><strong>Mode</strong></li>

      <label class="btn btn-default btn-lg">
        <input type="radio" name="mode" id="manual"><small>Manual</small>
      </label>
      <label class="btn btn-success btn-lg active">
        <input type="radio" name="mode" id="autounlock"><small>Auto Unlock</small>
      </label>
      <label class="btn btn-default btn-lg">
        <input type="radio" name="mode" id="pinunlock"><small>Pin Unlock</small>
      </label>
      <label class="btn btn-default btn-lg">
        <input type="radio" name="mode" id="forward"><small>Forward</small>
      </label>
      <!-- <button type="button" class="btn btn-default btn-lg">Manual</button> -->
